<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="android.inventory.siemens.cz.siemensinventory">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".dashboard.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".activities.ScanActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".electricrevision.ElectricRevisionActivity"
            android:label="@string/electric_revision"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".device.DeviceActivity"
            android:label="@string/device" />
        <activity
            android:name=".profile.ChangePasswordActivity"
            android:label="@string/change_password"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".calibration.CalibrationActivity"
            android:label="@string/calibration" />
        <activity
            android:name=".inventory.InventoryActivity"
            android:label="@string/inventory" />
        <activity android:name=".view.ViewEntityActivity" />
        <activity
            android:name=".borrow.BorrowActivity"
            android:label="@string/borrowed_devices" />
        <activity
            android:name=".profile.ProfileActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".devicetype.DeviceTypesListActivity"
            android:label="@string/device_types" />
        <activity
            android:name=".devicetype.DeviceTypeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.CreateEditNewEntityActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".device.DeviceListActivity"/>
    </application>

</manifest>