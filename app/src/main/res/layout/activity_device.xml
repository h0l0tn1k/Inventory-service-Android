<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="android.inventory.siemens.cz.siemensinventory.activities.DeviceActivity">

    <TextView
        android:id="@+id/deviceTypeTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/deviceVersionTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/deviceOwnerTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/deviceBarcodeTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/deviceSerialNoTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        />

    <ImageView
        android:id="@+id/deviceInventoryStateTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="State icon"
        android:gravity="center"
        android:src="@drawable/ic_close_red_800_24dp"/>

</LinearLayout>
