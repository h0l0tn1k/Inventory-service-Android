            <!-- INVENTORY RESULT -->

            <LinearLayout
                android:id="@+id/device_layout_inventory_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_weight="1"
                    android:gravity="start|center_horizontal"
                    android:shadowRadius="2"
                    android:text="@string/inventory_result"
                    android:textColor="@color/lightBlack"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/device_edit_inventory_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/inventory_result_radio_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:checked="@{device.inventoryRecord.inventoryState.state.equals(`OK`)}"
                        android:text="@string/ok" />

                    <RadioButton
                        android:id="@+id/inventory_result_radio_false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:checked="@{device.inventoryRecord.inventoryState.state.equals(`False`)}"
                        android:text="@string/false_string" />

                    <RadioButton
                        android:id="@+id/inventory_result_radio_unclear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="@{device.inventoryRecord.inventoryState.state.equals(`Unclear`)}"
                        android:text="@string/unclear" />
                </RadioGroup>

                <TextView
                    android:id="@+id/device_read_inventory_result"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:text="" />
