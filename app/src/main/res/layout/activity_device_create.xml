    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".device.DeviceActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/device_create_generic_result_section"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <!-- QR CODE -->
            <LinearLayout
                android:id="@+id/device_layout_qr_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_weight="1"
                    android:gravity="start|center_horizontal"
                    android:shadowRadius="2"
                    android:text="@string/qr_code_value"
                    android:textColor="@color/lightBlack"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/device_edit_qr_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:text="@{device.barcodeNumber}"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/device_read_qr_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:text="@{device.barcodeNumber}"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- DEVICE TYPE -->

            <LinearLayout
