                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/device_edit_device_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown"
                    android:text=""
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/device_read_device_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:text="@{device.deviceType.getDeviceTypeAndVersion()}"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- SERIAL NUMBER -->

            <LinearLayout
