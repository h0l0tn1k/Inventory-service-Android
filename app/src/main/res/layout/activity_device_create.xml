                    android:text="@string/calibration_period"
                    android:textColor="@color/lightBlack"
                    android:textSize="16sp" />
                <Spinner
                    android:id="@+id/device_edit_calibration_period"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp"
                    android:entries="@array/revisionPeriods"
                    android:selectedItemPosition="@={device.calibration.calibrationInterval}"
                    android:spinnerMode="dialog" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/year_s" />
            </LinearLayout>

            <!-- NEW CALIBRATION DATE -->

            <LinearLayout
                android:id="@+id/device_layout_calibration_new_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_weight="1"
                    android:gravity="start|center_horizontal"
                    android:shadowRadius="2"
                    android:text="@string/new_calibration_date"
                    android:textColor="@color/lightBlack"
                    android:textSize="16sp" />
                <EditText
                    android:id="@+id/device_edit_calibration_new_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>

        <include
            android:id="@+id/device_create_generic_result_section"
            layout="@layout/device_generic_confirmation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

        <include
            android:id="@+id/device_borrow_section_toolbar"
            layout="@layout/device_borrow_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone" />

    </RelativeLayout>
</layout>